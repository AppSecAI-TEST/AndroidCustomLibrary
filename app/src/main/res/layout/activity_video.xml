<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_default_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sds.dslibrary.lib.view.video.DsVideoView
            android:id="@+id/view_video"
            android:layout_width="match_parent"
            android:layout_height="220.33dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:background="@color/white"
        android:showDividers="middle"
        android:divider="@drawable/line03"
        android:gravity="center"
        android:orientation="horizontal">

        <com.sds.dslibrary.lib.view.button.text.DsTextButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/accent"
            android:text="Inquiry"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.sds.dslibrary.lib.view.button.text.DsTextButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/accent"
            android:text="Auto Order"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.sds.dslibrary.lib.view.button.text.DsTextButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/accent"
            android:text="Purchase"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>